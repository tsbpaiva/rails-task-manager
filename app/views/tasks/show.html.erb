<div class="border-btm">
  <h2><%= @task.title %></h2>
  <p><%= @task.details %></p>

  <% if @task.completed %>
    <p class="it light">Task complete</p>
  <% else %>
    <p class="it light">Task pending</p>
  <% end %>
</div>

<p><%= link_to "Edit",
  task_edit_path(@task) %></p>
<p><%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
<p><%= link_to "Back to list", tasks_path %></p>
